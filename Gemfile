source "https://rubygems.org"

# Use standalone Jekyll (more modern than github-pages gem)
gem "jekyll", "~> 4.3"

# Required for Ruby 3.x
gem "webrick", "~> 1.8"

# Silence warnings for Ruby 3.5+
gem "logger"
gem "csv"
gem "base64"

# Optional plugins
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
end
