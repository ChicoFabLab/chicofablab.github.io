<script>
document.addEventListener('DOMContentLoaded', function() {
    // Wait for CFL.achievements to be available
    function initAchievementsPage() {
        if (!window.CFL || !window.CFL.achievements) {
            setTimeout(initAchievementsPage, 100);
            return;
        }

        var container = document.getElementById('achievements-page');
        var ach = CFL.achievements;
        var levelInfo = ach.getLevel();
        var allAchievements = ach.getAll();
        var unlocked = ach.getUnlocked();
        var unlockedData = ach.getUnlockedData();
        var stats = ach.getStats();
        var totalXP = ach.getTotalXP();

        // XP values for display
        var XP_VALUES = ach.getXPValues();
        var rarityOrder = { legendary: 5, epic: 4, rare: 3, uncommon: 2, common: 1 };

        // Format timestamp
        function formatTime(timestamp) {
            if (!timestamp) return '';
            var date = new Date(timestamp);
            return date.toLocaleDateString();
        }

        // Get category display info
        var categories = {
            'all': { name: 'All Achievements', icon: 'üèÜ', desc: 'Every achievement in the system' },
            'progression': { name: 'Site Explorer', icon: 'üß≠', desc: 'Track your journey through the wiki' },
            '3d-printing': { name: '3D Printing Path', icon: 'üñ®Ô∏è', desc: 'Master the art of additive manufacturing' },
            'laser': { name: 'Laser Cutting Path', icon: '‚úÇÔ∏è', desc: 'Learn precision cutting and engraving' },
            'cnc': { name: 'CNC Path', icon: 'üîß', desc: 'Explore computer-controlled machining' },
            'special': { name: 'Special', icon: '‚≠ê', desc: 'Unique achievements and milestones' },
            'time': { name: 'Time-Based', icon: '‚è∞', desc: 'Rewards for when you visit' },
            'secret': { name: 'Secrets', icon: 'üîí', desc: 'Hidden achievements for the curious' }
        };

        // Build the page HTML
        var html = [];

        // ===== HERO SECTION =====
        html.push('<div class="cfl-achievements-hero">');
        html.push('  <div class="cfl-achievements-hero__level">');
        html.push('    <div class="cfl-achievements-hero__badge">' + levelInfo.icon + '</div>');
        html.push('    <div class="cfl-achievements-hero__info">');
        html.push('      <div class="cfl-achievements-hero__level-num">Level ' + levelInfo.level + '</div>');
        html.push('      <div class="cfl-achievements-hero__title">' + levelInfo.name + '</div>');
        html.push('    </div>');
        html.push('  </div>');
        html.push('  <div class="cfl-achievements-hero__progress">');
        html.push('    <div class="cfl-achievements-hero__progress-bar" style="width: ' + levelInfo.progress + '%"></div>');
        html.push('  </div>');
        html.push('  <div class="cfl-achievements-hero__stats">');
        html.push('    <div class="cfl-achievements-hero__stat">');
        html.push('      <span class="cfl-achievements-hero__stat-value">' + totalXP + '</span>');
        html.push('      <span class="cfl-achievements-hero__stat-label">Total XP</span>');
        html.push('    </div>');
        html.push('    <div class="cfl-achievements-hero__stat">');
        html.push('      <span class="cfl-achievements-hero__stat-value">' + unlocked.length + '/' + Object.keys(allAchievements).length + '</span>');
        html.push('      <span class="cfl-achievements-hero__stat-label">Unlocked</span>');
        html.push('    </div>');
        html.push('    <div class="cfl-achievements-hero__stat">');
        html.push('      <span class="cfl-achievements-hero__stat-value">' + stats.clicks + '</span>');
        html.push('      <span class="cfl-achievements-hero__stat-label">Clicks</span>');
        html.push('    </div>');
        html.push('    <div class="cfl-achievements-hero__stat">');
        html.push('      <span class="cfl-achievements-hero__stat-value">' + (stats.pages || []).length + '</span>');
        html.push('      <span class="cfl-achievements-hero__stat-label">Pages</span>');
        html.push('    </div>');
        html.push('  </div>');
        html.push('</div>');

        // ===== LEARNING PATHS =====
        html.push('<h2>üìö Learning Paths</h2>');
        html.push('<div class="cfl-paths-grid">');

        ['3d-printing', 'laser', 'cnc'].forEach(function(pathId) {
            var pathInfo = categories[pathId];
            var progress = ach.getPathProgress(pathId);
            var isComplete = progress.completed === progress.total && progress.total > 0;

            html.push('<div class="cfl-path-card' + (isComplete ? ' cfl-path-card--complete' : '') + '">');
            html.push('  <div class="cfl-path-card__icon">' + pathInfo.icon + '</div>');
            html.push('  <div class="cfl-path-card__info">');
            html.push('    <div class="cfl-path-card__name">' + pathInfo.name + '</div>');
            html.push('    <div class="cfl-path-card__desc">' + pathInfo.desc + '</div>');
            html.push('    <div class="cfl-path-card__progress">');
            html.push('      <div class="cfl-path-card__progress-bar" style="width: ' + progress.percent + '%"></div>');
            html.push('    </div>');
            html.push('    <div class="cfl-path-card__count">' + progress.completed + ' / ' + progress.total + ' achievements</div>');
            html.push('  </div>');
            if (isComplete) {
                html.push('  <div class="cfl-path-card__badge">‚úÖ</div>');
            }
            html.push('</div>');
        });

        html.push('</div>');

        // ===== ACHIEVEMENTS BY CATEGORY =====
        html.push('<h2>üéØ All Achievements</h2>');

        // Category tabs
        html.push('<div class="cfl-achievements-page__tabs" id="ach-tabs">');
        Object.keys(categories).forEach(function(catId, index) {
            var cat = categories[catId];
            var isActive = index === 0 ? ' active' : '';
            html.push('  <button class="cfl-achievements-page__tab' + isActive + '" data-category="' + catId + '">');
            html.push('    <span>' + cat.icon + '</span> ' + cat.name);
            html.push('  </button>');
        });
        html.push('</div>');

        // Achievement grid (initially shows all)
        html.push('<div class="cfl-achievements-page__grid" id="ach-grid">');

        // Sort achievements
        var sortedIds = Object.keys(allAchievements).sort(function(a, b) {
            var aUnlocked = unlocked.indexOf(a) !== -1;
            var bUnlocked = unlocked.indexOf(b) !== -1;
            if (aUnlocked && !bUnlocked) return -1;
            if (!aUnlocked && bUnlocked) return 1;
            if (aUnlocked && bUnlocked) {
                var aRarity = rarityOrder[allAchievements[a].rarity] || 0;
                var bRarity = rarityOrder[allAchievements[b].rarity] || 0;
                if (aRarity !== bRarity) return bRarity - aRarity;
            }
            return 0;
        });

        sortedIds.forEach(function(id) {
            var achData = allAchievements[id];
            var isUnlocked = unlocked.indexOf(id) !== -1;
            var unlockTime = unlockedData[id] ? unlockedData[id].time : null;
            var rarity = achData.rarity || 'common';
            var xp = XP_VALUES[rarity] || 0;
            var progress = achData.progress;
            var progressPercent = progress ? Math.min((progress.current / progress.target) * 100, 100) : 0;
            var rarityDisplay = rarity.charAt(0).toUpperCase() + rarity.slice(1);

            html.push('<div class="cfl-achievement-card cfl-achievement-card--' + rarity);
            if (isUnlocked) html.push(' cfl-achievement-card--unlocked');
            html.push('" data-id="' + id + '" data-category="' + achData.category + '">');
            html.push('  <div class="cfl-achievement-card__icon">');
            html.push('    ' + achData.icon);
            if (!isUnlocked) html.push('    <span class="cfl-achievement-card__lock">üîí</span>');
            html.push('  </div>');
            html.push('  <div class="cfl-achievement-card__content">');
            html.push('    <div class="cfl-achievement-card__header">');
            html.push('      <span class="cfl-achievement-card__name">' + achData.name + '</span>');
            html.push('      <span class="cfl-achievement-card__rarity cfl-achievement-card__rarity--' + rarity + '">' + rarityDisplay + '</span>');
            html.push('    </div>');
            html.push('    <div class="cfl-achievement-card__desc">' + (isUnlocked ? achData.desc : '???') + '</div>');
            if (progress && !isUnlocked) {
                html.push('    <div class="cfl-achievement-card__progress">');
                html.push('      <div class="cfl-achievement-card__progress-bar" style="width: ' + progressPercent + '%"></div>');
                html.push('      <span class="cfl-achievement-card__progress-text">' + progress.current + '/' + progress.target + '</span>');
                html.push('    </div>');
            }
            html.push('    <div class="cfl-achievement-card__footer">');
            html.push('      <span class="cfl-achievement-card__xp">+' + xp + ' XP</span>');
            if (isUnlocked && unlockTime) {
                html.push('      <span class="cfl-achievement-card__time">Unlocked ' + formatTime(unlockTime) + '</span>');
            }
            html.push('    </div>');
            html.push('  </div>');
            html.push('</div>');
        });

        html.push('</div>');

        // ===== DATA CONTROLS =====
        html.push('<div class="cfl-achievements-page__controls">');
        html.push('  <h3>üîê Your Data</h3>');
        html.push('  <p>All achievement data is stored locally in your browser. Nothing is sent to any server.</p>');
        html.push('  <div class="cfl-achievements-page__buttons">');
        html.push('    <button class="cfl-btn cfl-btn--secondary cfl-btn--sm" id="export-data">üì• Export Data</button>');
        html.push('    <button class="cfl-btn cfl-btn--danger cfl-btn--sm" id="clear-data">üóëÔ∏è Reset Progress</button>');
        html.push('  </div>');
        html.push('</div>');

        // Render the page
        container.innerHTML = html.join('\n');

        // ===== EVENT HANDLERS =====

        // Tab switching
        var tabs = container.querySelectorAll('.cfl-achievements-page__tab');
        var cards = container.querySelectorAll('.cfl-achievement-card');

        tabs.forEach(function(tab) {
            tab.addEventListener('click', function() {
                var category = tab.getAttribute('data-category');

                // Update active tab
                tabs.forEach(function(t) { t.classList.remove('active'); });
                tab.classList.add('active');

                // Filter cards
                cards.forEach(function(card) {
                    var cardCategory = card.getAttribute('data-category');
                    if (category === 'all' || cardCategory === category) {
                        card.style.display = '';
                    } else {
                        card.style.display = 'none';
                    }
                });

                if (CFL.sounds) CFL.sounds.pop();
            });
        });

        // Export data
        var exportBtn = container.querySelector('#export-data');
        if (exportBtn) {
            exportBtn.addEventListener('click', function() {
                if (CFL.privacy && CFL.privacy.exportData) {
                    CFL.privacy.exportData();
                }
            });
        }

        // Clear data
        var clearBtn = container.querySelector('#clear-data');
        if (clearBtn) {
            clearBtn.addEventListener('click', function() {
                if (confirm('Are you sure you want to reset all your progress? This cannot be undone.')) {
                    if (CFL.achievements && CFL.achievements.reset) {
                        CFL.achievements.reset();
                        location.reload();
                    }
                }
            });
        }
    }

    initAchievementsPage();
});
</script>

