            CFL.toast({
                icon: msg.icon,
                title: msg.title,
                message: msg.message,
                variant: 'danger',
                iconAnim: 'shake'
            });
        }

        if (corruption >= 100) {
            corruptBtn.textContent = 'ğŸ‘ï¸ FULLY CONSUMED';
            corruptBtn.disabled = true;
        }
    });

    cleanseBtn.addEventListener('click', function() {
        if (corruption > 0) {
            updateCorruption(0);

            if (window.CFL && window.CFL.toast) {
                CFL.toast({
                    icon: 'âœ¨',
