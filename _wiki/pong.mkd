<script>
(function() {
    // ===========================================
    // SUPER BLOCK INVADERS PONG - Main Controller
    // ===========================================

    // Wait for all scripts to load
    var checkReady = setInterval(function() {
        if (window.SBIPGame && window.SBIPRenderer && window.SBIP_Entities && window.SBIP_CONFIG) {
            clearInterval(checkReady);
            initGame();
        }
    }, 50);

    function initGame() {
        // Canvas and game instance
        var canvas = document.getElementById('sbip-canvas');
        var game = new SBIPGame(canvas);

        // DOM elements
        var startBtn = document.getElementById('sbip-start');
        var pauseBtn = document.getElementById('sbip-pause');
        var resetBtn = document.getElementById('sbip-reset');
        var winModal = document.getElementById('sbip-win-modal');
        var gameoverModal = document.getElementById('sbip-gameover-modal');
        var leaderboardEl = document.getElementById('sbip-leaderboard');
        var highscoreEl = document.getElementById('sbip-highscore');
        var clearScoresBtn = document.getElementById('sbip-clear-scores');
        var submitScoreBtn = document.getElementById('sbip-submit-score');
        var playAgainBtn = document.getElementById('sbip-play-again');
        var finalScoreEl = document.getElementById('sbip-final-score');
        var gameoverScoreEl = document.getElementById('sbip-gameover-score');
        var initialInputs = [
            document.getElementById('initial-1'),
            document.getElementById('initial-2'),
            document.getElementById('initial-3')
        ];

        // ===========================================
        // GAME LOOP
        // ===========================================

        var lastTime = 0;
        var previousState = 'idle';

        function gameLoop(timestamp) {
            var deltaTime = timestamp - lastTime;
            lastTime = timestamp;

            // Cap delta time to prevent huge jumps
            deltaTime = Math.min(deltaTime, 50);

            game.update(deltaTime);
            game.render();

            // Check for state changes
            if (game.state !== previousState) {
                onStateChange(game.state, previousState);
                previousState = game.state;
            }

            requestAnimationFrame(gameLoop);
        }

        function onStateChange(newState, oldState) {
            // Update button states
            startBtn.disabled = newState === 'playing' || newState === 'paused';
            pauseBtn.disabled = newState !== 'playing' && newState !== 'paused';
            pauseBtn.textContent = newState === 'paused' ? '‚ñ∂Ô∏è Resume' : '‚è∏Ô∏è Pause';

            // Show modals
            if (newState === 'victory') {
                finalScoreEl.textContent = 'Score: ' + game.score.toLocaleString();
                winModal.classList.add('active');
                initialInputs[0].value = '';
                initialInputs[1].value = '';
                initialInputs[2].value = '';
                setTimeout(function() { initialInputs[0].focus(); }, 100);
            } else if (newState === 'gameOver') {
                gameoverScoreEl.textContent = 'Score: ' + game.score.toLocaleString();
                gameoverModal.classList.add('active');
            }

            // Update high score display
            highscoreEl.textContent = game.highScore.toLocaleString();
        }

        // ===========================================
        // LEADERBOARD
        // ===========================================

        function renderLeaderboard() {
            var leaderboard = game.getLeaderboard();
            highscoreEl.textContent = game.highScore.toLocaleString();

            if (leaderboard.length === 0) {
                leaderboardEl.innerHTML = '<li class="sbip-leaderboard-empty">No scores yet. Be the first!</li>';
                return;
            }

            var html = '';
            leaderboard.forEach(function(entry, i) {
                var medal = '';
                if (i === 0) medal = 'ü•á ';
                else if (i === 1) medal = 'ü•à ';
                else if (i === 2) medal = 'ü•â ';

                html += '<li class="sbip-leaderboard-item">' +
                    '<span class="sbip-leaderboard-rank">' + medal + (i + 1) + '.</span>' +
                    '<span class="sbip-leaderboard-initials">' + entry.initials + '</span>' +
                    '<span class="sbip-leaderboard-score">' + entry.score.toLocaleString() + '</span>' +
                    '<span class="sbip-leaderboard-wave">W' + entry.wave + '</span>' +
                    '</li>';
            });

            leaderboardEl.innerHTML = html;
        }

        // ===========================================
        // EVENT LISTENERS
        // ===========================================

        startBtn.addEventListener('click', function() {
            game.start();
        });

        pauseBtn.addEventListener('click', function() {
            game.togglePause();
        });

        resetBtn.addEventListener('click', function() {
            winModal.classList.remove('active');
            gameoverModal.classList.remove('active');
            game.resetGame();
            game.state = 'idle';
            startBtn.disabled = false;
            pauseBtn.disabled = true;
            if (window.CFL && CFL.sounds) CFL.sounds.pop();
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'r' || e.key === 'R') {
                if (game.state !== 'playing') {
                    resetBtn.click();
                }
            }
        });

        // Initial inputs auto-advance
        initialInputs.forEach(function(input, i) {
            input.addEventListener('input', function() {
                this.value = this.value.toUpperCase().replace(/[^A-Z]/g, '');
                if (this.value && i < 2) {
                    initialInputs[i + 1].focus();
                }
            });

            input.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && !this.value && i > 0) {
                    initialInputs[i - 1].focus();
                }
                if (e.key === 'Enter') {
                    submitScoreBtn.click();
                }
            });
        });

        // Submit score
        submitScoreBtn.addEventListener('click', function() {
            var initials = initialInputs[0].value + initialInputs[1].value + initialInputs[2].value;

            if (initials.length < 3) {
                if (window.CFL && CFL.toast) {
                    CFL.toast({
                        icon: '‚ö†Ô∏è',
                        title: 'Enter 3 initials',
                        message: 'Please enter all 3 initials for the leaderboard.',
                        variant: 'warning'
                    });
                }
                return;
            }

            game.saveToLeaderboard(initials);
            winModal.classList.remove('active');
            renderLeaderboard();

            if (window.CFL && CFL.toast) {
                CFL.toast({
                    icon: 'üèÜ',
                    title: 'Score Saved!',
                    message: initials + ' - ' + game.score.toLocaleString() + ' points!',
                    variant: 'success',
                    iconAnim: 'bounce'
                });
            }

            game.resetGame();
            game.state = 'idle';
            startBtn.disabled = false;
            pauseBtn.disabled = true;
        });

        // Play again
        playAgainBtn.addEventListener('click', function() {
            gameoverModal.classList.remove('active');
            game.resetGame();
            game.state = 'idle';
            startBtn.disabled = false;
            pauseBtn.disabled = true;
        });

        // Clear scores
        clearScoresBtn.addEventListener('click', function() {
            if (confirm('Clear all leaderboard scores?')) {
                game.clearLeaderboard();
                renderLeaderboard();
                if (window.CFL && CFL.toast) {
                    CFL.toast({
                        icon: 'üóëÔ∏è',
                        title: 'Leaderboard Cleared',
                        message: 'All scores have been removed.',
                        variant: 'info'
                    });
                }
            }
        });

        // Close modals on backdrop click
        winModal.addEventListener('click', function(e) {
            if (e.target === winModal) {
                winModal.classList.remove('active');
                game.resetGame();
                game.state = 'idle';
                startBtn.disabled = false;
            }
        });

        gameoverModal.addEventListener('click', function(e) {
            if (e.target === gameoverModal) {
                gameoverModal.classList.remove('active');
                game.resetGame();
                game.state = 'idle';
                startBtn.disabled = false;
            }
        });

        // ===========================================
        // INITIALIZATION
        // ===========================================

        renderLeaderboard();
        requestAnimationFrame(gameLoop);

        // Track page visit for achievements
        if (window.CFL && CFL.achievements) {
            CFL.achievements.unlock('easter-egg');
        }

        console.log('üöÄ Super Block Invaders Pong loaded!');
        console.log('üí° Tip: Destroy enemy bricks while defending your own!');
    }
})();
</script>

