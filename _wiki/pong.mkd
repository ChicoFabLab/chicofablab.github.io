<script>
(function() {
    // ===========================================
    // PONG GAME - Vanilla Canvas Implementation
    // ===========================================
    // A complete Pong game with AI opponent,
    // scoring, and localStorage leaderboard.
    //
    // Built for Chico Fab Lab as an easter egg.
    // ===========================================

    // Canvas setup
    var canvas = document.getElementById('pong-canvas');
    var ctx = canvas.getContext('2d');
    var W = canvas.width;
    var H = canvas.height;

    // Game state
    var gameRunning = false;
    var gamePaused = false;
    var playerScore = 0;
    var cpuScore = 0;
    var winScore = 5;

    // Paddle settings
    var paddleWidth = 10;
    var paddleHeight = 80;
    var paddleSpeed = 6;

    // Player paddle (left)
    var player = {
        x: 20,
        y: H / 2 - paddleHeight / 2,
        width: paddleWidth,
        height: paddleHeight,
        dy: 0
    };

    // CPU paddle (right)
    var cpu = {
        x: W - 20 - paddleWidth,
        y: H / 2 - paddleHeight / 2,
        width: paddleWidth,
        height: paddleHeight,
        speed: 3.5  // AI speed (slightly slower than player for fairness)
    };

    // Ball
    var ball = {
        x: W / 2,
        y: H / 2,
        radius: 8,
        speed: 5,
        vx: 5,
        vy: 3
    };

    // Input state
    var keys = {};

    // DOM elements
    var playerScoreEl = document.getElementById('player-score');
    var cpuScoreEl = document.getElementById('cpu-score');
    var startBtn = document.getElementById('pong-start');
    var pauseBtn = document.getElementById('pong-pause');
    var resetBtn = document.getElementById('pong-reset');
    var winModal = document.getElementById('pong-win-modal');
    var loseModal = document.getElementById('pong-lose-modal');
    var leaderboardEl = document.getElementById('pong-leaderboard');
    var clearScoresBtn = document.getElementById('pong-clear-scores');
    var submitScoreBtn = document.getElementById('pong-submit-score');
    var playAgainBtn = document.getElementById('pong-play-again');
    var initialInputs = [
        document.getElementById('initial-1'),
        document.getElementById('initial-2'),
        document.getElementById('initial-3')
    ];

    // ===========================================
    // DRAWING FUNCTIONS
    // ===========================================

    function drawRect(x, y, w, h, color) {
        ctx.fillStyle = color;
        ctx.fillRect(x, y, w, h);
    }

    function drawCircle(x, y, r, color) {
        ctx.fillStyle = color;
        ctx.beginPath();
        ctx.arc(x, y, r, 0, Math.PI * 2);
        ctx.fill();
    }

    function drawNet() {
        ctx.setLineDash([10, 10]);
        ctx.strokeStyle = '#444';
        ctx.lineWidth = 2;
        ctx.beginPath();
        ctx.moveTo(W / 2, 0);
        ctx.lineTo(W / 2, H);
        ctx.stroke();
        ctx.setLineDash([]);
    }

    function drawText(text, x, y, size, color) {
        ctx.fillStyle = color || '#fff';
        ctx.font = (size || 20) + 'px "JetBrains Mono", monospace';
        ctx.textAlign = 'center';
        ctx.fillText(text, x, y);
    }

    function render() {
        // Clear canvas
        drawRect(0, 0, W, H, '#000');

        // Draw net
        drawNet();

        // Draw paddles
        drawRect(player.x, player.y, player.width, player.height, '#fff');
        drawRect(cpu.x, cpu.y, cpu.width, cpu.height, '#fff');

        // Draw ball
        drawCircle(ball.x, ball.y, ball.radius, '#fff');

        // Draw center text when not running
        if (!gameRunning) {
            drawText('Press START to play', W / 2, H / 2, 20, '#666');
        } else if (gamePaused) {
            drawText('PAUSED', W / 2, H / 2, 30, '#fff');
        }
    }

    // ===========================================
    // GAME LOGIC
    // ===========================================

    function resetBall(direction) {
        ball.x = W / 2;
        ball.y = H / 2;
        ball.speed = 5;
        ball.vx = direction * ball.speed;
        ball.vy = (Math.random() * 4 - 2);
    }

    function resetGame() {
        playerScore = 0;
        cpuScore = 0;
        updateScoreDisplay();
        resetBall(1);
        player.y = H / 2 - paddleHeight / 2;
        cpu.y = H / 2 - paddleHeight / 2;
        gameRunning = false;
        gamePaused = false;
        startBtn.disabled = false;
        pauseBtn.disabled = true;
        render();
    }

    function updateScoreDisplay() {
        playerScoreEl.textContent = playerScore;
        cpuScoreEl.textContent = cpuScore;
    }

    function checkWin() {
        if (playerScore >= winScore) {
            gameRunning = false;
            showWinModal();
            // Unlock achievement
            if (window.CFL && CFL.achievements) {
                CFL.achievements.unlock('pong-master');
            }
            if (window.CFL && CFL.sounds) {
                CFL.sounds.success();
            }
            return true;
        }
        if (cpuScore >= winScore) {
            gameRunning = false;
            showLoseModal();
            if (window.CFL && CFL.sounds) {
                CFL.sounds.error();
            }
            return true;
        }
        return false;
    }

    function update() {
        if (!gameRunning || gamePaused) return;

        // Player movement
        if (keys['w'] || keys['W'] || keys['ArrowUp']) {
            player.y -= paddleSpeed;
        }
        if (keys['s'] || keys['S'] || keys['ArrowDown']) {
            player.y += paddleSpeed;
        }

        // Keep player paddle in bounds
        player.y = Math.max(0, Math.min(H - player.height, player.y));

        // CPU AI - follows ball with slight delay
        var cpuCenter = cpu.y + cpu.height / 2;
        var targetY = ball.y;

        // Only move if ball is coming toward CPU
        if (ball.vx > 0) {
            if (cpuCenter < targetY - 20) {
                cpu.y += cpu.speed;
            } else if (cpuCenter > targetY + 20) {
                cpu.y -= cpu.speed;
            }
        }

        // Keep CPU paddle in bounds
        cpu.y = Math.max(0, Math.min(H - cpu.height, cpu.y));

        // Ball movement
        ball.x += ball.vx;
        ball.y += ball.vy;

        // Ball collision with top/bottom walls
        if (ball.y - ball.radius < 0 || ball.y + ball.radius > H) {
            ball.vy *= -1;
            if (window.CFL && CFL.sounds) CFL.sounds.pop();
        }

        // Ball collision with player paddle
        if (ball.x - ball.radius < player.x + player.width &&
            ball.x + ball.radius > player.x &&
            ball.y > player.y &&
            ball.y < player.y + player.height) {

            // Calculate angle based on where ball hit paddle
            var hitPos = (ball.y - player.y) / player.height;
            var angle = (hitPos - 0.5) * Math.PI / 3;  // Max 60 degree angle

            ball.speed = Math.min(ball.speed + 0.2, 10);  // Speed up slightly
            ball.vx = Math.abs(ball.speed * Math.cos(angle));
            ball.vy = ball.speed * Math.sin(angle);
            ball.x = player.x + player.width + ball.radius;

            if (window.CFL && CFL.sounds) CFL.sounds.click();
        }

        // Ball collision with CPU paddle
        if (ball.x + ball.radius > cpu.x &&
            ball.x - ball.radius < cpu.x + cpu.width &&
            ball.y > cpu.y &&
            ball.y < cpu.y + cpu.height) {

            var hitPos = (ball.y - cpu.y) / cpu.height;
            var angle = (hitPos - 0.5) * Math.PI / 3;

            ball.speed = Math.min(ball.speed + 0.2, 10);
            ball.vx = -Math.abs(ball.speed * Math.cos(angle));
            ball.vy = ball.speed * Math.sin(angle);
            ball.x = cpu.x - ball.radius;

            if (window.CFL && CFL.sounds) CFL.sounds.click();
        }

        // Scoring
        if (ball.x < 0) {
            cpuScore++;
            updateScoreDisplay();
            if (window.CFL && CFL.sounds) CFL.sounds.error();
            if (!checkWin()) {
                resetBall(1);
            }
        }

        if (ball.x > W) {
            playerScore++;
            updateScoreDisplay();
            if (window.CFL && CFL.sounds) CFL.sounds.coin();
            if (!checkWin()) {
                resetBall(-1);
            }
        }
    }

    function gameLoop() {
        update();
        render();
        requestAnimationFrame(gameLoop);
    }

    // ===========================================
    // LEADERBOARD
    // ===========================================

    function getLeaderboard() {
        try {
            return JSON.parse(localStorage.getItem('cflPongLeaderboard') || '[]');
        } catch (e) {
            return [];
        }
    }

    function saveLeaderboard(leaderboard) {
        try {
            localStorage.setItem('cflPongLeaderboard', JSON.stringify(leaderboard));
        } catch (e) {
            console.warn('Could not save leaderboard');
        }
    }

    function addScore(initials, score) {
        var leaderboard = getLeaderboard();
        var date = new Date().toISOString().split('T')[0];

        leaderboard.push({
            initials: initials.toUpperCase(),
            score: score,
            date: date
        });

        // Sort by score (wins), keep top 10
        leaderboard.sort(function(a, b) { return b.score - a.score; });
        leaderboard = leaderboard.slice(0, 10);

        saveLeaderboard(leaderboard);
        renderLeaderboard();
    }

    function renderLeaderboard() {
        var leaderboard = getLeaderboard();

        if (leaderboard.length === 0) {
            leaderboardEl.innerHTML = '<li class="pong-leaderboard-empty">No scores yet. Be the first!</li>';
            return;
        }

        var html = '';
        leaderboard.forEach(function(entry, i) {
            var medal = '';
            if (i === 0) medal = 'ü•á ';
            else if (i === 1) medal = 'ü•à ';
            else if (i === 2) medal = 'ü•â ';

            html += '<li class="pong-leaderboard-item">' +
                '<span class="pong-leaderboard-rank">' + medal + (i + 1) + '.</span>' +
                '<span class="pong-leaderboard-initials">' + entry.initials + '</span>' +
                '<span class="pong-leaderboard-score">' + entry.date + '</span>' +
                '</li>';
        });

        leaderboardEl.innerHTML = html;
    }

    // ===========================================
    // MODALS
    // ===========================================

    function showWinModal() {
        winModal.classList.add('active');
        initialInputs[0].value = '';
        initialInputs[1].value = '';
        initialInputs[2].value = '';
        initialInputs[0].focus();
    }

    function hideWinModal() {
        winModal.classList.remove('active');
    }

    function showLoseModal() {
        loseModal.classList.add('active');
    }

    function hideLoseModal() {
        loseModal.classList.remove('active');
    }

    // ===========================================
    // EVENT LISTENERS
    // ===========================================

    // Keyboard input
    document.addEventListener('keydown', function(e) {
        keys[e.key] = true;

        // Pause toggle
        if ((e.key === ' ' || e.key === 'p' || e.key === 'P') && gameRunning) {
            e.preventDefault();
            gamePaused = !gamePaused;
            pauseBtn.textContent = gamePaused ? '‚ñ∂Ô∏è Resume' : '‚è∏Ô∏è Pause';
        }

        // Reset
        if (e.key === 'r' || e.key === 'R') {
            resetGame();
        }

        // Prevent arrow key scrolling
        if (['ArrowUp', 'ArrowDown', ' '].includes(e.key)) {
            e.preventDefault();
        }
    });

    document.addEventListener('keyup', function(e) {
        keys[e.key] = false;
    });

    // Button controls
    startBtn.addEventListener('click', function() {
        if (!gameRunning) {
            gameRunning = true;
            gamePaused = false;
            resetBall(Math.random() > 0.5 ? 1 : -1);
            startBtn.disabled = true;
            pauseBtn.disabled = false;
            if (window.CFL && CFL.sounds) CFL.sounds.whoosh();
            if (window.CFL && CFL.toast) {
                CFL.toast({
                    icon: 'üèì',
                    title: 'Game On!',
                    message: 'First to 5 wins. Good luck!',
                    variant: 'info',
                    iconAnim: 'bounce'
                });
            }
        }
    });

    pauseBtn.addEventListener('click', function() {
        if (gameRunning) {
            gamePaused = !gamePaused;
            pauseBtn.textContent = gamePaused ? '‚ñ∂Ô∏è Resume' : '‚è∏Ô∏è Pause';
        }
    });

    resetBtn.addEventListener('click', function() {
        resetGame();
        if (window.CFL && CFL.sounds) CFL.sounds.pop();
    });

    // Initial inputs auto-advance
    initialInputs.forEach(function(input, i) {
        input.addEventListener('input', function() {
            this.value = this.value.toUpperCase().replace(/[^A-Z]/g, '');
            if (this.value && i < 2) {
                initialInputs[i + 1].focus();
            }
        });

        input.addEventListener('keydown', function(e) {
            if (e.key === 'Backspace' && !this.value && i > 0) {
                initialInputs[i - 1].focus();
            }
            if (e.key === 'Enter') {
                submitScoreBtn.click();
            }
        });
    });

    // Submit score
    submitScoreBtn.addEventListener('click', function() {
        var initials = initialInputs[0].value + initialInputs[1].value + initialInputs[2].value;

        if (initials.length < 3) {
            if (window.CFL && CFL.toast) {
                CFL.toast({
                    icon: '‚ö†Ô∏è',
                    title: 'Enter 3 initials',
                    message: 'Please enter all 3 initials for the leaderboard.',
                    variant: 'warning'
                });
            }
            return;
        }

        addScore(initials, playerScore);
        hideWinModal();

        if (window.CFL && CFL.toast) {
            CFL.toast({
                icon: 'üèÜ',
                title: 'Score Saved!',
                message: initials + ' added to the leaderboard!',
                variant: 'success',
                iconAnim: 'bounce'
            });
        }

        resetGame();
    });

    // Play again (after loss)
    playAgainBtn.addEventListener('click', function() {
        hideLoseModal();
        resetGame();
    });

    // Clear leaderboard
    clearScoresBtn.addEventListener('click', function() {
        if (confirm('Clear all leaderboard scores?')) {
            saveLeaderboard([]);
            renderLeaderboard();
            if (window.CFL && CFL.toast) {
                CFL.toast({
                    icon: 'üóëÔ∏è',
                    title: 'Leaderboard Cleared',
                    message: 'All scores have been removed.',
                    variant: 'info'
                });
            }
        }
    });

    // Close modals on backdrop click
    winModal.addEventListener('click', function(e) {
        if (e.target === winModal) {
            hideWinModal();
            resetGame();
        }
    });

    loseModal.addEventListener('click', function(e) {
        if (e.target === loseModal) {
            hideLoseModal();
            resetGame();
        }
    });

    // ===========================================
    // INITIALIZATION
    // ===========================================

    renderLeaderboard();
    render();
    gameLoop();

    // Track page visit for potential achievements
    if (window.CFL && CFL.achievements) {
        CFL.achievements.unlock('easter-egg');
    }

})();
</script>

